<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"

        android:src="@drawable/placeholder" />


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_photo"
        android:background="@color/text_view_background"
        android:padding="@dimen/common_padding"
        android:paddingStart="@dimen/description_left_padding"
        android:paddingEnd="8dp"
        android:layout_marginTop="@dimen/layout_margin"
        android:text="@string/description_text" />
    <ImageView
        android:layout_width="@dimen/description_logo"
        android:layout_height="@dimen/description_logo"
        android:layout_alignStart="@id/description"
        android:layout_alignTop="@id/description"
        android:layout_alignBottom="@id/description"
        android:scaleType="fitCenter"
        android:src="@drawable/modular_mining_logo"/>

    <Button
        android:id="@+id/social_facebook"
        android:layout_width="@dimen/common_social_btn"
        android:layout_height="@dimen/common_social_btn"
        android:layout_alignTop="@+id/social_instagram"
        android:layout_toStartOf="@+id/social_instagram"
        />

    <Button
        android:id="@+id/social_instagram"
        android:layout_width="@dimen/common_social_btn"
        android:layout_height="@dimen/common_social_btn"
        android:layout_below="@id/send_mail"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/social_button_margin"
        android:layout_marginStart="@dimen/social_button_margin"
        android:layout_marginEnd="@dimen/social_button_margin"
        />

    <Button
        android:id="@+id/social_telegram"
        android:layout_width="@dimen/common_social_btn"
        android:layout_height="@dimen/common_social_btn"
        android:layout_alignTop="@+id/social_instagram"
        android:layout_toEndOf="@+id/social_instagram" />

    <EditText
        android:id="@+id/send_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:background="@drawable/shape_border_rectangle"
        android:layout_marginTop="@dimen/layout_margin"
        android:hint="@string/contact_me"
        android:textColorHint="@color/colorAccent"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionSend"

        />

</RelativeLayout>
