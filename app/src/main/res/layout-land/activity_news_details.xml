<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:layout_weight="3"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/relative_nd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="@dimen/common_padding">


            <TextView
                android:id="@+id/title_nd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_weight="1"
                android:lines="2"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:src="@tools:sample/full_names" />


            <TextView
                android:id="@+id/full_text_nd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/publish_date_nd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_weight="1"
                android:fontFamily="@font/vintage"
                android:gravity="end"
                android:textAlignment="gravity"
                android:textColor="#808080"
                tools:src="@tools:sample/date/ddmmyy" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>
